<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kartik Mishra"
                android:textSize="20dp"
                android:textColor="#fff"
                android:id="@+id/nameTextView"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/view1"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/nameTextView"
                android:background="#000"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTextView"
                android:textSize="13dp"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:id="@+id/addressTextView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Address : 4649/114-115,Street No-5,New Modern shahdara Delhi -32"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                android:layout_below="@+id/addressTextView"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No : 8285444490"
                android:layout_below="@+id/addressTextView"
                android:textSize="13dp"
                android:textColor="#fff"
                android:id="@+id/phoneNumberTextView"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                android:layout_below="@+id/phoneNumberTextView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : kartikmishra04@gmail.com"
                android:textSize="13dp"
                android:textColor="#fff"
                android:id="@+id/emailTextview"
                android:layout_below="@id/phoneNumberTextView"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>